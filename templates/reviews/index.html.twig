{% set iconMenu = 'zoo-arcadia-marais-menu' %}
{% set pageName = 'reviews' %}
{% extends "base.html.twig" %}
{% block title %}Arcadia | Avis{% endblock %}
{% block style %} 
  <link rel="stylesheet" href="{{ asset('assets/scss/css/reviews.css') }}?{{ "now"|date("U") }}" type="text/css">
{% endblock %}

{# BODY #}
{% block body %}
  <header id="header">
    {% include "components/nav.html.twig" %}
  </header>

  <main id="main">
  {% for message in app.flashes('error') %}
    <div class="alert alert-danger">
        {{ message }}
    </div>
{% endfor %}
    {% block formReviews %}
      {% include "components/formReviews.html.twig" %}
    {% endblock %}
    
  </main>
  {% block footerReviews %}
      {% include "components/footerReviews.html.twig" %}
    {% endblock %}
{% endblock %}
{# END BODY #}

  

{# SCRIPTS JS #}
{% block scripts %}
  <script src="{{ asset('assets/scripts/reviews.js' )}}?{{ "now"|date("U") }}" defer></script>
  <script src="{{ asset('assets/scripts/forms/controlReviewsForm.js' )}}?{{ "now"|date("U") }}"></script>
{% endblock %}