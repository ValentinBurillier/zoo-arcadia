{% set iconMenu = 'zoo-arcadia-brown_menu' %}
{% set pageName = 'loginPage' %}

{% extends "base.html.twig" %}
{% block title %}Arcadia | Connexion{% endblock %}
{% block style %} 
  <link rel="stylesheet" href="{{ asset('assets/scss/css/connect2.css') }}?{{ "now"|date("U") }}" type="text/css">
{% endblock %}

{# BODY #}
{% block body %}

  {# HEADER #}
    {% block header %}
        {% include "components/headerConnect.html.twig" with { 'class': 'fill bg--brown'} %}
    {% endblock %}

  <main id="main__loginPage" class="bg-login">
      {{ form_start(form) }}

        <h2>Connexion</h2>
        {% for message in app.flashes('error') %}
        <div id="errorMsg"class="alert alert-error">
          {{ message }}
        </div>
{% endfor %}
        <div class="container-data">
        {{ form_label(form.email) }}  {# Affiche le label #}
        {{ form_widget(form.email) }} {# Affiche le champ input #}
        <span id="emailError"></span>
        {{ form_label(form.password) }}  {# Affiche le label #}
        {{ form_widget(form.password) }} {# Affiche le champ input #}
        <span id="passwordError"></span>
        </div>

        <button type="submit">Se connecter</button>
      {{ form_end(form) }}

      

  </main>
  
  {% block f_socialsNetwork %}
    {% include "components/footer_socialsNetwork.html.twig" %}
  {% endblock %}
<script src="{{ asset('assets/scripts/forms/controlConnectForm.js' )}}?{{ "now"|date("U") }}"></script>
{% endblock %}